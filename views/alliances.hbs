<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Alliances Page</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
        <link rel="stylesheet" href="style.css">
        <script src="script.js" defer></script>
    </head>
    <body onload="showForm('browse')">

        <div class="title-container">
            <img src="logo.webp" alt="Logo" class="logo">
            <h1 class="page-title">Alliances Page</h1>
        </div>

        <nav class="navbar">
            <ul class="navlist">
                <li class="navitem"><a href="home.html">Home</a></li>
                <li class="navitem"><a href="players.html">Players</a></li>
                <li class="navitem"><a href="battles.html">Battles</a></li>
                <li class="navitem"><a href="characters.html">Characters</a></li>
                <li class="navitem"><a href="abilities.html">Abilities</a></li>
                <li class="navitem"><a href="alliances.html">Alliances</a></li>
                <li class="navitem"><a href="playerBattles.html">Player Battles</a></li>
                <li class="navitem"><a href="battleParticipants.html">Battle Participants</a></li>
                <li class="navitem"><a href="playerCharacters.html">Player Characters</a></li>
            </ul>
        </nav>

        <div id="browse">
            <h3 class="table-name">Browse Alliances</h3>
            
            <div class="table-container">
                <table border="1" cellpadding="5">
                    <tr class="table-header">
                        <th class="new-button"><a href="#" onClick="showForm('insert')">New</a></th>
                        <th></th>
                        <th>alliances_id</th>
                        <th>alliances_name</th>
                        <th>stat_boost</th>
                        <th>stat_boost_type</th>
                    </tr>
                    <tr>
                        <td><a href="#" onClick="showForm('update', 5)">Edit</a></td>
                        <td><a href="#" onclick="showForm('delete', 5)">Delete</a></td>
                        <td>5</td>
                        <td>Symbiote Bond</td>
                        <td>15.00</td>
                        <td>Attack Power</td>
                    </tr>
                    <tr>
                        <td><a href="#" onClick="showForm('update', 6)">Edit</a></td>
                        <td><a href="#" onclick="showForm('delete', 6)">Delete</a></td>
                        <td>6</td>
                        <td>Gamma Charge</td>
                        <td>20.00</td>
                        <td>Health Boost</td>
                    </tr>
                    <tr>
                        <td><a href="#" onClick="showForm('update', 7)">Edit</a></td>
                        <td><a href="#" onclick="showForm('delete', 7)">Delete</a></td>
                        <td>7</td>
                        <td>Ammo Overload</td>
                        <td>25.00</td>
                        <td>Attack Power</td>
                    </tr>
                    <tr>
                        <td><a href="#" onClick="showForm('update', 8)">Edit</a></td>
                        <td><a href="#" onclick="showForm('delete', 8)">Delete</a></td>
                        <td>8</td>
                        <td>Lunar Focus</td>
                        <td>15.00</td>
                        <td>Healing Boost</td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Add Alliance Form -->
        <div id="insert" class="form-container hidden">
            <h3 class="modal">Add a New Alliance</h3>
            <label class="modal-label">Alliance Name</label>
            <input type="text" id="alliance-name-input">
            
            <label class="modal-label">Stat Boost</label>
            <input type="text" id="stat-boost-input">
            
            <label class="modal-label">Stat Boost Type</label>
            <input type="text" id="stat-boost-type-input">
            
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="saveChanges()">Add Alliance</button>
        </div>

        <!-- Edit Alliance Form -->
        <div id="update" class="form-container hidden">
            <h3 class="modal">Edit Alliance</h3>
            <label class="modal-label">Alliance ID</label>
            <input type="text" id="edit-alliance-id-input" value="5">

            <label class="modal-label">Alliance Name</label>
            <input type="text" id="edit-alliance-name-input" value="Symbiote Bond">
            
            <label class="modal-label">Stat Boost</label>
            <input type="text" id="edit-stat-boost-input" value="15.00">
            
            <label class="modal-label">Stat Boost Type</label>
            <input type="text" id="edit-stat-boost-type-input" value="Attack Power">
            
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="saveChanges()">Save Changes</button>
        </div>

        <!-- Delete Confirmation -->
        <div id="delete" class="form-container hidden">
            <h3 class="modal">Are you sure you want to delete this alliance?</h3>
            <p class="modal-label">Alliance ID: <span id="delete-message"></span></p>
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="confirmDelete()">Delete</button>
        </div>
    </body>
</html>