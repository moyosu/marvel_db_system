{{#> layout title= "Player Characters Page"}}
        <div id="browse">
            <h3 class="table-name">Browse Player Characters</h3>
            
            <input type="text" id="searchInput" placeholder="Search by track_player... " onkeyup="filterTable()">
            
            <div class="table-container">
                <table border="1" cellpadding="5" id="IT-table">
                    <thead class="table-header">
                <tr>
                    <th class="new-button"><a href="#" onClick="showForm('insert')">New</a></th>
                    <th></th>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>
                        <a href="#" onClick="showForm('update', {{this.[Player ID]}})">Edit</a>
                    </td>
                    <td>
                        <a href="#" onClick="showForm('delete', {{this.[Player ID]}})">Delete</a>
                    </td>
                    <td>{{this.Player}}</td>
                    <td>{{this.Character}}</td>
                </tr>
                {{/each}}
            </tbody>
                </table>
            </div>
        </div>

        <!-- Add Player Character Form -->
        <div id="insert" class="form-container hidden">
            <h3 class="modal">Add a New Player Character</h3>
            <label class="modal-label">Track Player</label>
            <input type="text" id="player-track-input">
            
            <label class="modal-label">Track Character</label>
            <input type="text" id="character-track-input">
            
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="addPlayerCharacter()">Add Player Character</button>
        </div>

        <!-- Edit Player Character Form -->
        <div id="update" class="form-container hidden">
            <h3 class="modal">Edit Player Character</h3>
            <label class="modal-label">Track Player</label>
            <input type="text" id="edit-player-track-input" value="4">
            
            <label class="modal-label">Track Character</label>
            <input type="text" id="edit-character-track-input" value="4">
            
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="saveChanges()">Save Changes</button>
        </div>

        <!-- Delete Confirmation -->
        <div id="delete" class="form-container hidden">
            <h3 class="modal">Are you sure you want to delete this player character?</h3>
            <p class="modal-label">Track Player: <span id="delete-message"></span></p>
            <button onClick="showForm('browse')">Cancel</button>
            <button onClick="confirmDelete()">Delete</button>
        </div>
{{/layout}}